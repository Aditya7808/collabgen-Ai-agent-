# CollabGen-Agent Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=CollabGen-Agent
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# API Keys - REQUIRED
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Model Configuration
# Options: gpt-4-turbo-preview, gpt-4, gpt-4-0125-preview, gpt-3.5-turbo
OPENAI_MODEL=gpt-4-turbo-preview

# Optional: API Key Authentication
# Comma-separated list of valid API keys for authenticating clients
# Leave empty for no authentication in development
VALID_API_KEYS=

# Secret for hashing API keys
API_KEY_SECRET=collabgen-secret-key-change-in-production

# Rate Limiting
RATE_LIMIT_PIPELINE=5/hour
RATE_LIMIT_AGENTS=10/hour
RATE_LIMIT_REPORTS=100/hour

# Timeouts (seconds)
TIMEOUT_RESEARCH_AGENT=120
TIMEOUT_PRODUCT_AGENT=90
TIMEOUT_MARKETING_AGENT=90
TIMEOUT_PIPELINE=300
TIMEOUT_LLM_REQUEST=60

# Retry Configuration
MAX_RETRIES=3
RETRY_INITIAL_DELAY=1.0
RETRY_MAX_DELAY=30.0
RETRY_BACKOFF_FACTOR=2

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Storage
REPORTS_DIRECTORY=./reports
MAX_REQUEST_SIZE_MB=10
MAX_MARKDOWN_LENGTH=1048576

# CORS - Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Domain Whitelist - Comma-separated list
ALLOWED_DOMAINS=XR,AI,Robotics,Healthcare,Finance,Gaming,Education,Automotive,Retail,Manufacturing

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
